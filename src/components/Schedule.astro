---
// Schedule.astro
---

<section id="schedule" class="schedule section">
  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>Schedule</h2>
    <p>Explore the full programme of keynotes, discussions, and impact-driven sessions.</p>
  </div>

  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <!-- Day Tabs -->
    <div class="schedule-header">
      <ul class="nav nav-tabs" id="schedule-tabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="schedule-tab-1" data-bs-toggle="tab" data-bs-target="#schedule-day-1" type="button" role="tab" aria-controls="schedule-day-1" aria-selected="true">
            Oct 15<br>Monday
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="schedule-tab-2" data-bs-toggle="tab" data-bs-target="#schedule-day-2" type="button" role="tab" aria-controls="schedule-day-2" aria-selected="false">
            Oct 16<br>Tuesday
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="schedule-tab-3" data-bs-toggle="tab" data-bs-target="#schedule-day-3" type="button" role="tab" aria-controls="schedule-day-3" aria-selected="false">
            Oct 17<br>Wednesday
          </button>
        </li>
      </ul>
    </div>

    <!-- Tab Content -->
    <div class="tab-content" id="schedule-tabContent">

      <!-- Day 1 -->
      <div class="tab-pane fade show active" id="schedule-day-1" role="tabpanel" aria-labelledby="schedule-tab-1">
        <div class="schedule-content">
          <div class="session-timeline">

            <!-- Example Session Block -->
            <div class="session-block">
              <div class="session-time">
                <span class="start">08:30</span>
                <span class="end">09:00</span>
              </div>
              <div class="session-card">
                <div class="session-info">
                  <div class="session-meta">
                    <span class="track break">Networking</span>
                    <span class="room">Main Stage</span>
                  </div>
                  <h3 class="session-title">Arrival & Registration</h3>
                  <p class="session-description">Welcome refreshments and networking as participants arrive and collect badges.</p>
                  <div class="speaker-info">
                    <img src="assets/img/person/person-f-4.webp" class="speaker-avatar img-fluid" alt="">
                    <div class="speaker-details">
                      <h4 class="speaker-name">Event Host Team</h4>
                      <span class="speaker-role">Welcome & Orientation</span>
                    </div>
                  </div>
                </div>
                <button class="add-to-schedule"><i class="bi bi-calendar-plus"></i> Add to Schedule</button>
              </div>
            </div>
            <!-- Repeat similar session blocks for all Day 1 sessions -->

          </div>
        </div>
      </div>

      <!-- Day 2 -->
      <div class="tab-pane fade" id="schedule-day-2" role="tabpanel" aria-labelledby="schedule-tab-2">
        <div class="schedule-content">
          <div class="session-timeline">

            <!-- Morning Kickoff -->
            <div class="session-block">
              <div class="session-time">
                <span class="start">09:00</span>
                <span class="end">09:15</span>
              </div>
              <div class="session-card">
                <div class="session-info">
                  <div class="session-meta">
                    <span class="track plenary">PLENARY</span>
                    <span class="room">Main Stage</span>
                  </div>
                  <h3 class="session-title">Morning Kickoff</h3>
                  <p class="session-description">A brief welcome to set the tone for Day 2, outlining the key themes and collaboration opportunities ahead.</p>
                </div>
                <button class="add-to-schedule"><i class="bi bi-calendar-plus"></i> Add to Schedule</button>
              </div>
            </div>

            <!-- Parallel Labs Round 1 -->
            <div class="session-block">
              <div class="session-time mb-4">
                <span class="start">10:00</span>
                <span class="end">11:30</span>
              </div>
              <div class="row gy-4">
                <!-- Environment Lab -->
                <div class="col-lg-3 col-md-6">
                  <div class="session-card enhanced">
                    <div class="session-info">
                      <div class="session-meta">
                        <span class="track environment">ENVIRONMENT</span>
                        <span class="room">Lab 1</span>
                      </div>
                      <h3 class="session-title">Environment Lab</h3>
                      <p class="session-description">Hands-on workshop examining climate resilience strategies, emissions reduction pathways, and adaptation tools.</p>
                    </div>
                    <button class="add-to-schedule"><i class="bi bi-calendar-plus"></i> Add to Schedule</button>
                  </div>
                </div>
                <!-- Repeat other labs for Food, Energy, Urban -->
              </div>
            </div>

            <!-- Coffee Break -->
            <div class="session-block">
              <div class="session-time">
                <span class="start">11:30</span>
                <span class="end">12:00</span>
              </div>
              <div class="session-card break-card">
                <div class="session-info">
                  <div class="session-meta">
                    <span class="track break">Break</span>
                    <span class="room">Lobby</span>
                  </div>
                  <h3 class="session-title">Coffee Break</h3>
                  <p class="session-description">Refreshments and networking before the next round of workshops.</p>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

      <!-- Day 3 Placeholder -->
      <div class="tab-pane fade" id="schedule-day-3" role="tabpanel" aria-labelledby="schedule-tab-3">
        <div class="schedule-content">
          <p>Day 3 schedule content goes here.</p>
        </div>
      </div>

    </div>
  </div>
</section>